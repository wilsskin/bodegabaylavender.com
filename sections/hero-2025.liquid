{%- style -%}
  .hero-2025 {
    position: relative;
    width: 100%;
    height: 600px;
    overflow: hidden;
  }

  .hero-2025__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-2025__content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 2;
    max-width: 800px;
    padding: 0 var(--spacing-medium);
  }

  .hero-2025__heading {
    margin-bottom: var(--spacing-medium);
    color: {{ section.settings.text_color | default: '#ffffff' }};
  }

  .hero-2025__subtitle {
    margin-bottom: var(--spacing-large);
    color: {{ section.settings.text_color | default: '#ffffff' }};
    opacity: 0.9;
  }

  .hero-2025__button {
    display: inline-block;
    padding: var(--spacing-small) var(--spacing-large);
    background-color: {{ section.settings.button_color | default: '#52448C' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .hero-2025__button:hover {
    background-color: {{ section.settings.button_hover_color | default: '#6149A2' }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .hero-2025 {
      height: 400px;
    }
    
    .hero-2025__content {
      padding: 0 var(--spacing-small);
    }
    
    .hero-2025__heading {
      margin-bottom: var(--spacing-small);
    }
    
    .hero-2025__subtitle {
      margin-bottom: var(--spacing-medium);
    }
  }
{%- endstyle -%}

<div class="hero-2025">
  {%- if section.settings.image != blank -%}
    <img 
      src="{{ section.settings.image | image_url: width: 1920 }}"
      alt="{{ section.settings.image.alt | escape }}"
      class="hero-2025__image"
      loading="eager"
      width="1920"
      height="600"
    >
  {%- else -%}
    <div class="hero-2025__placeholder" style="background-color: #f0f0f0; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #666;">
      <p>Please add an image in the section settings</p>
    </div>
  {%- endif -%}

  <div class="hero-2025__content">
    {%- if section.settings.heading != blank -%}
      <h1 class="hero-2025__heading {{ section.settings.heading_size | default: 'h1' }}">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}

    {%- if section.settings.subtitle != blank -%}
      <p class="hero-2025__subtitle {{ section.settings.subtitle_style | default: 'subtitle' }}">
        {{ section.settings.subtitle }}
      </p>
    {%- endif -%}

    {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
      <a href="{{ section.settings.button_link }}" class="hero-2025__button">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Hero 2025",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Hero Title"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2", 
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        }
      ],
      "default": "h1"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Your subtitle text goes here"
    },
    {
      "type": "select",
      "id": "subtitle_style",
      "label": "Subtitle Style",
      "options": [
        {
          "value": "subtitle",
          "label": "Subtitle"
        },
        {
          "value": "body",
          "label": "Body"
        }
      ],
      "default": "subtitle"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#52448C"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Color",
      "default": "#6149A2"
    }
  ],
  "presets": [
    {
      "name": "Hero 2025"
    }
  ]
}
{% endschema %}
