{%- style -%}
  .section-{{ section.id }} {
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    padding: var(--spacing-xlarge) 0; /* 64px top and bottom */
  }

  .section-{{ section.id }}__container {
    max-width: 120rem; /* 1200px - using rem */
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}__container {
      padding: 0 5rem;
    }
  }

  .section-{{ section.id }}__content {
    display: flex;
    flex-direction: column;
    gap: 2.4rem; /* 32px - default gap */
  }

  .section-{{ section.id }}__content > .section-{{ section.id }}__header + .section-{{ section.id }}__features {
    margin-top: 3.2rem; /* Additional 32px to make total 64px between header and features */
  }

  .section-{{ section.id }}__header {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    text-align: left;
    max-width: 60rem; /* 600px - using rem */
    margin: 0;
  }

  .section-{{ section.id }}__heading {
    font-family: 'Open Sans', sans-serif;
    font-weight: 600;
    font-size: 3.2rem; /* 32px - matches design */
    line-height: 1.36;
    color: #000000;
    margin: 0;
  }

  .section-{{ section.id }}__text {
    font-family: 'Open Sans', sans-serif;
    font-weight: 400;
    font-size: 1.8rem; /* 18px - matches design */
    line-height: 1.36;
    color: #000000;
    margin: 0;
    text-align: left;
    max-width: 60rem; /* 600px - using rem */
  }


  .section-{{ section.id }}__features {
    display: flex;
    gap: 1rem; /* 10px - using rem */
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .section-{{ section.id }}__feature {
    flex: 1;
    max-width: 30rem; /* 320px total */
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xsmall); /* 8px - using variable */
    align-items: flex-start;
    text-align: left;
    background-color: #FFFFFF; /* White card background */
  }

  .section-{{ section.id }}__feature-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-bottom: 16px;
  }

  .section-{{ section.id }}__feature-icon {
    width: 60px;
    height: 60px;
    background-color: #EDECFE;
    border-radius: 60px; 
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .section-{{ section.id }}__feature-icon svg,
  .section-{{ section.id }}__feature-icon img {
    width: 32px;
    height: 32px;
    color: #6149A2;
    fill: #6149A2;
  }

  .section-{{ section.id }}__feature-title {
    font-family: 'Open Sans', sans-serif;
    font-weight: 600;
    font-size: 1.8rem; /* 18px - matches design */
    line-height: 1.36;
    color: #000000;
    margin: 0;
    flex: 1;
  }

  .section-{{ section.id }}__feature-text {
    font-family: 'Open Sans', sans-serif;
    font-weight: 400;
    font-size: 1.6rem; /* 16px - matches design */
    font-style: italic; /* Added italic styling */
    line-height: 1.5;
    color: #4D4D62;
    margin: 0;
  }

  @media screen and (max-width: 1024px) {
    .section-{{ section.id }}__features {
      gap: 1.5rem; /* Increase gap on smaller screens */
    }
    
    .section-{{ section.id }}__feature {
      width: 30.4rem; /* 304px total (272px content + 32px padding) */
      max-width: 30.4rem; /* 304px total */
    }
  }

  @media screen and (max-width: 900px) {
    .section-{{ section.id }}__features {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: flex-start;
      gap: 1rem;
    }
    
    .section-{{ section.id }}__feature {
      width: calc(50% - 0.5rem); /* 2 cards per row */
      max-width: none;
    }
    
    .section-{{ section.id }}__feature:nth-child(3) {
      width: 100%; /* 3rd card full width below */
    }
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}__text {
      max-width: 100%; /* Remove fixed width on mobile */
    }
    .section-{{ section.id }}__container {
      padding: 0 1.5rem;
    }

    .section-{{ section.id }}__heading {
      font-size: 2.8rem; /* 28px on mobile */
    }

    .section-{{ section.id }}__text {
      font-size: 1.6rem; /* 16px on mobile */
    }

    .section-{{ section.id }}__feature-title {
      font-size: 1.6rem; /* 16px on mobile */
    }

    .section-{{ section.id }}__feature-text {
      font-size: 1.4rem; /* 14px on mobile */
    }

    .section-{{ section.id }}__cta-link {
      font-size: 1.6rem; /* 16px on mobile */
    }

    .section-{{ section.id }}__feature-icon {
    width: 48px;
    height: 48px;
  }

  .section-{{ section.id }}__feature-icon svg,
  .section-{{ section.id }}__feature-icon img {
    width: 24px;
    height: 24px;
  }





  }

  @media screen and (max-width: 650px) {
    .section-{{ section.id }}__feature-header {
      padding-bottom: 8px;
    }
     .section-{{ section.id }}__feature-icon {
      width: 4rem; /* Reduce from 5rem to 4rem */
      height: 4rem; /* Reduce from 5rem to 4rem */
      border-radius: 1.2rem;
    }

     .section-{{ section.id }}__features {
      display: flex;
      flex-direction: column;
      gap: 1.5rem; /* Increased gap for better vertical spacing */
      font-size: 3px;
    }
    
    .section-{{ section.id }}__cta-link {
      font-size: 1.6rem !important; /* 14px on small mobile */
    }

     .section-{{ section.id }}__cta {
      text-align: left;
      padding-top: 0;
      font-size: 3px;
  }


    .section-{{ section.id }}__feature {
      width: 100%;
      max-width: 288px;
      gap: 4px;
      padding-bottom: 16px;
    }
    
    /* Show mobile CTA below features */
    .section-{{ section.id }}__cta--mobile {
      display: flex;
      margin-top: 1rem;
    }


  }

  

  /* Hide mobile CTA by default */
  .section-{{ section.id }}__cta--mobile {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .section-{{ section.id }}__cta--mobile .section-{{ section.id }}__cta-link {
      padding: 10px 32px;
    }
  }

  .section-{{ section.id }}__cta {
    text-align: left;
    padding-top: 0;
  }

  .section-{{ section.id }}__cta-link {
    font-family: 'Open Sans', sans-serif;
    font-weight: 600; /* Bold */
    font-size: 1.8rem; /* 18px - using rem */
    color: #636DCF;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .section-{{ section.id }}__cta-link:hover {
    color: #4A52B8; /* Slightly darker on hover */
  }

  /* Arrow animation on hover */
  .section-{{ section.id }}__cta-link .arrow {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .section-{{ section.id }}__cta-link:hover .arrow {
    transform: translateX(4px);
  }

  /* Reduce bottom margin on small screens */
  @media screen and (max-width: 450px) {
    .section-{{ section.id }} .title-wrapper-with-link {
      margin-bottom: 2rem !important;
    }
  }


{%- endstyle -%}

<div class="section-{{ section.id }}">
  <div class="section-{{ section.id }}__container">
    <div class="section-{{ section.id }}__content">
      <div class="section-{{ section.id }}__header">
        <h2 class="section-{{ section.id }}__heading">
          {{ section.settings.heading | default: 'Why Lavender?' }}
        </h2>
        <p class="section-{{ section.id }}__text">
          {{ section.settings.text | default: 'Beyond the popular use cases like stress relief, aromatherapy, and floral beauty, there are many ways to use lavender!' }}
        </p>
      </div>

      <div class="section-{{ section.id }}__features">
        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-header">
            <div class="section-{{ section.id }}__feature-icon">
              {{ 'icon-burn.svg' | asset_url | img_tag: 'Burn treatment icon', 'width="22" height="22"' }}
            </div>
          </div>
          <h3 class="section-{{ section.id }}__feature-title">
            {{ section.settings.feature_1_title | default: 'Treat burn wounds' }}
          </h3>
          <p class="section-{{ section.id }}__feature-text">
            "I always keep <a href="#" style="color: #636DCF; text-decoration: underline;">lavender essential oil</a> in the kitchen in case I burn myself"
          </p>
        </div>

        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-header">
            <div class="section-{{ section.id }}__feature-icon">
              {{ 'icon-repel.svg' | asset_url | img_tag: 'Insect repellent icon', 'width="22" height="22"' }}
            </div>
          </div>
          <h3 class="section-{{ section.id }}__feature-title">
            {{ section.settings.feature_2_title | default: 'Repel insects' }}
          </h3>
          <p class="section-{{ section.id }}__feature-text">
            "We use <a href="#" style="color: #636DCF; text-decoration: underline;">lavender hydrosol</a> as a mosquito repellent everyday in Kauai"
          </p>
        </div>

        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-header">
            <div class="section-{{ section.id }}__feature-icon">
              {{ 'icon-glass.svg' | asset_url | img_tag: 'Glass cleaner icon', 'width="22" height="22"' }}
            </div>
          </div>
          <h3 class="section-{{ section.id }}__feature-title">
            {{ section.settings.feature_3_title | default: 'Natural glass cleaner' }}
          </h3>
          <p class="section-{{ section.id }}__feature-text">
            "<a href="#" style="color: #636DCF; text-decoration: underline;">Lavender hydrosol</a> is the best non-chemical glass cleaner I've ever used"
          </p>
        </div>
      </div>

      <div class="section-{{ section.id }}__cta section-{{ section.id }}__cta--desktop">
        <a href="/collections/all" class="section-{{ section.id }}__cta-link">
          Learn More <span class="arrow">â†’</span>
        </a>
      </div>
    </div>
  </div>
</div>

