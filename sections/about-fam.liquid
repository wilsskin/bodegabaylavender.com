{%- style -%}
  .section-{{ section.id }} {
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    padding: var(--spacing-section-small) 0;
  }

  .section-{{ section.id }}__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Responsive padding following theme pattern */
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}__container {
      padding: 0 5rem;
    }
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}__container {
      padding: 0 5rem;
    }
  }

  /* Single column layout - all items centered */
  .section-{{ section.id }}__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px; /* Desktop gap */
  }

  /* Header styling */
  .section-{{ section.id }}__header {
    text-align: center;
    max-width: 100%;
  }

  .section-{{ section.id }}__header h2 {
    font-family: var(--font-heading-family);
    font-weight: 600;
    font-size: 32px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    padding: 0;
  }

  /* Photo styling */
  .section-{{ section.id }}__photo {
    max-width: 800px;
    max-height: 450px;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .section-{{ section.id }}__photo img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px;
    max-width: 800px;
    max-height: 450px;
  }

  /* Body text styling */
  .section-{{ section.id }}__text {
    text-align: center;
    max-width: 600px;
    width: 100%;
  }

  .section-{{ section.id }}__text .text-content {
    font-family: var(--font-body-family);
    font-weight: 400;
    font-size: 18px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-content p {
    margin: 0;
    padding: 0;
  }

  /* Responsive gap scaling */
  @media screen and (max-width: 750px) {
    .section-{{ section.id }}__content {
      gap: 20px;
    }
    
    .section-{{ section.id }}__header h2 {
      font-size: 24px;
    }
    
    .section-{{ section.id }}__text .text-content {
      font-size: 16px;
    }
  }

  @media screen and (max-width: 450px) {
    .section-{{ section.id }}__content {
      gap: 16px;
    }
    
    .section-{{ section.id }}__header h2 {
      font-size: 18px;
    }
    
    .section-{{ section.id }}__text .text-content {
      font-size: 14px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}">
  <div class="section-{{ section.id }}__container">
    <div class="section-{{ section.id }}__content">
      <!-- Header -->
      <div class="section-{{ section.id }}__header">
        {%- if section.settings.heading != blank -%}
          <h2>
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
      </div>

      <!-- Photo -->
      {%- if section.settings.image != blank -%}
        <div class="section-{{ section.id }}__photo">
          <img 
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="800"
            height="450"
          >
        </div>
      {%- endif -%}

      <!-- Body Text -->
      {%- if section.settings.text != blank -%}
        <div class="section-{{ section.id }}__text">
          <div class="text-content">
            {{ section.settings.text }}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Family",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Family"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Family Photo"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Add your family story here.</p>"
    }
  ],
  "presets": [
    {
      "name": "About Family"
    }
  ]
}
{% endschema %}