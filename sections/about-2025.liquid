{%- style -%}
  .section-{{ section.id }} {
    background-color: {{ section.settings.background_color | default: '#EDECFE' }};
    padding: var(--spacing-section-small) 0;
    
    /* Icon customization variables */
    --icon-size: {{ section.settings.icon_size | default: 32 }}px;
    --icon-color: {{ section.settings.icon_color | default: '#6149A2' }};
  }

  .section-{{ section.id }}__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0;
  }

  /* Main content layout - matching Figma structure */
  .section-{{ section.id }}__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xlarge); /* 64px - using our spacing variable */
  }

  /* Text content styling - matching Figma typography */
  .section-{{ section.id }}__text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-medium); /* 24px - using our spacing variable */
    text-align: center;
    max-width: 800px;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .section-{{ section.id }}__text h2 {
    font-family: var(--font-heading-family);
    font-weight: 600;
    font-size: 18px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    width: 100%;
    text-align: center;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-content {
    font-family: var(--font-body-family);
    font-weight: 400;
    font-size: 24px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    width: 100%;
    text-align: center;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-content p {
    margin: 0;
    padding: 0;
  }

  /* Features grid - matching Figma layout with max-width constraint */
  .section-{{ section.id }}__features {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0; /* No gap - features fill the full width */
    max-width: 800px; /* Max width constraint as requested */
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .section-{{ section.id }}__feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xsmall); /* 8px - using our spacing variable */
    flex: 0 0 auto; /* Don't grow, don't shrink, size to content */
    padding: 0;
    margin: 0;
    width: auto; /* Width based on content */
  }

  /* Icon styling - flexible and customizable */
  .section-{{ section.id }}__feature-icon {
    width: var(--icon-size, 32px);
    height: var(--icon-size, 32px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .section-{{ section.id }}__feature-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    color: var(--icon-color, #6149A2);
    fill: var(--icon-color, #6149A2);
  }

  /* SVG color control */
  .section-{{ section.id }}__feature-icon svg {
    width: 100%;
    height: 100%;
    color: var(--icon-color, #6149A2);
    fill: var(--icon-color, #6149A2);
  }

  /* Feature text styling - matching Figma typography */
  .section-{{ section.id }}__feature-text {
    font-family: var(--font-body-family);
    font-weight: 400;
    font-size: 16px;
    line-height: 1.36;
    color: #000000;
    text-align: center;
  }

  /* Mobile responsive - adapting to smaller screens */
  @media screen and (max-width: 900px) {
    .section-{{ section.id }}__features {
      flex-direction: column;
      gap: var(--spacing-medium);
      max-width: 100%;
    }

    .section-{{ section.id }}__feature {
      flex-direction: row;
      gap: var(--spacing-small);
      justify-content: flex-start;
      width: 100%;
    }

    .section-{{ section.id }}__feature-text {
      text-align: left;
    }
    
    .section-{{ section.id }}__text h2 {
      width: 100%;
    }
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}__features {
      gap: var(--spacing-small);
    }
    
    .section-{{ section.id }}__text h2 {
      font-size: 16px;
      width: 100%;
    }
    
    .section-{{ section.id }}__text .text-content {
      font-size: 20px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}">
  <div class="section-{{ section.id }}__container">
    <div class="section-{{ section.id }}__content">
      <!-- Text Content -->
      <div class="section-{{ section.id }}__text">
        {%- if section.settings.heading != blank -%}
          <h2>
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="text-content">
            {{ section.settings.text }}
          </div>
        {%- endif -%}
      </div>

      <!-- Features Grid -->
      <div class="section-{{ section.id }}__features">
        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-icon">
            <img src="{{ 'icon-organic.svg' | asset_url }}" alt="Organic">
          </div>
          <div class="section-{{ section.id }}__feature-text">
            Organic Products
          </div>
        </div>

        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-icon">
            <img src="{{ 'icon-sustainable.svg' | asset_url }}" alt="Sustainable">
          </div>
          <div class="section-{{ section.id }}__feature-text">
            Sustainably Sourced
          </div>
        </div>

        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-icon">
            <img src="{{ 'icon-handcrafted.svg' | asset_url }}" alt="Handcrafted">
          </div>
          <div class="section-{{ section.id }}__feature-text">
            Always Handcrafted
          </div>
        </div>

        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-icon">
            <img src="{{ 'icon-family.svg' | asset_url }}" alt="Family">
          </div>
          <div class="section-{{ section.id }}__feature-text">
            Family Owned
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About 2025",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#EDECFE"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Us"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        {
          "value": "text-h1",
          "label": "H1"
        },
        {
          "value": "text-h2",
          "label": "H2"
        },
        {
          "value": "text-h3",
          "label": "H3"
        }
      ],
      "default": "text-h3"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>We are a family-owned and operated lavender farm located in Bodega Bay, situated along the Sonoma coast in Northern California.</p>"
    },
    {
      "type": "select",
      "id": "text_style",
      "label": "Text Style",
      "options": [
        {
          "value": "text-body",
          "label": "Body"
        },
        {
          "value": "text-h3",
          "label": "H3"
        },
        {
          "value": "text-tag",
          "label": "Tag"
        }
      ],
      "default": "text-h3"
    },
    {
      "type": "header",
      "content": "Icon Settings"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 16,
      "max": 64,
      "step": 4,
      "unit": "px",
      "label": "Icon Size",
      "default": 32
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#6149A2"
    }
  ],
  "presets": [
    {
      "name": "About 2025"
    }
  ]
}
{% endschema %}
