{%- style -%}
  .section-{{ section.id }} {
    background-color: {{ section.settings.background_color | default: '#EDECFE' }};
    padding: var(--spacing-section-small) 0;
    
  }

  .section-{{ section.id }}__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Responsive padding following theme pattern */
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}__container {
      padding: 0 5rem;
    }
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}__container {
      padding: 0 5rem;
    }
  }

  /* Main content layout - matching Figma structure */
  .section-{{ section.id }}__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xlarge); /* 64px - using our spacing variable */
  }

  /* Text content styling - matching Figma typography */
  .section-{{ section.id }}__text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-medium); /* 24px - using our spacing variable */
    text-align: center;
    max-width: 840px;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .section-{{ section.id }}__text h2 {
    font-family: var(--font-heading-family);
    font-weight: 600;
    font-size: 18px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    width: 100%;
    text-align: center;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-content {
    font-family: var(--font-body-family);
    font-weight: 400;
    font-size: 32px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    width: 100%;
    text-align: center;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-content p {
    margin: 0;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-story {
    font-family: var(--font-body-family);
    font-weight: 400;
    font-size: 18px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    width: 100%;
    text-align: center;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-story p {
    margin: 0;
    padding: 0;
  }


  /* Tablet responsive */
  @media screen and (max-width: 900px) {
    .section-{{ section.id }}__text h2 {
      width: 100%;
    }
  }

  /* Mobile responsive */
  @media screen and (max-width: 750px) {
    .section-{{ section.id }}__text {
      max-width: 600px;
    }
    
    .section-{{ section.id }}__text h2 {
      font-size: 16px;
      width: 100%;
    }
    
    .section-{{ section.id }}__text .text-content {
      font-size: 24px;
    }
  }

{%- endstyle -%}

<div class="section-{{ section.id }}">
  <div class="section-{{ section.id }}__container">
    <div class="section-{{ section.id }}__content">
      <!-- Text Content -->
      <div class="section-{{ section.id }}__text">
        {%- if section.settings.heading != blank -%}
          <h2>
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="text-content">
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        {%- if section.settings.story_text != blank -%}
          <div class="text-story">
            {{ section.settings.story_text }}
          </div>
        {%- endif -%}
      </div>

    </div>
  </div>
</div>

