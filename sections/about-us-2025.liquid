{%- style -%}
  .section-{{ section.id }} {
    background-color: {{ section.settings.background_color | default: '#EDECFE' }};
    padding: var(--spacing-section-small) 0;
    
  }

  .section-{{ section.id }}__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Responsive padding following theme pattern */
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}__container {
      padding: 0 5rem;
    }
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}__container {
      padding: 0 5rem;
    }
  }

  /* Main content layout - matching Figma structure */
  .section-{{ section.id }}__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xlarge); /* 64px - using our spacing variable */
  }

  /* Text content styling - matching Figma typography */
  .section-{{ section.id }}__text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-medium); /* 24px - using our spacing variable */
    text-align: center;
    max-width: 840px;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .section-{{ section.id }}__text h2 {
    font-family: var(--font-heading-family);
    font-weight: 600;
    font-size: 18px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    width: 100%;
    text-align: center;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-content {
    font-family: var(--font-body-family);
    font-weight: 400;
    font-size: 32px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    width: 100%;
    text-align: center;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-content p {
    margin: 0;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-story {
    font-family: var(--font-body-family);
    font-weight: 400;
    font-size: 18px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    width: 100%;
    text-align: center;
    padding: 0;
  }

  .section-{{ section.id }}__text .text-story p {
    margin: 0;
    padding: 0;
  }


  /* Tablet responsive */
  @media screen and (max-width: 900px) {
    .section-{{ section.id }}__text h2 {
      width: 100%;
    }
  }

  /* Mobile responsive */
  @media screen and (max-width: 750px) {
    .section-{{ section.id }}__text {
      max-width: 600px;
    }
    
    .section-{{ section.id }}__text h2 {
      font-size: 16px;
      width: 100%;
    }
    
    .section-{{ section.id }}__text .text-content {
      font-size: 24px;
    }
  }

{%- endstyle -%}

<div class="section-{{ section.id }}">
  <div class="section-{{ section.id }}__container">
    <div class="section-{{ section.id }}__content">
      <!-- Text Content -->
      <div class="section-{{ section.id }}__text">
        {%- if section.settings.heading != blank -%}
          <h2>
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="text-content">
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        <div class="text-story">
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.</p>
        </div>
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "About 2025",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#EDECFE"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Us"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        {
          "value": "text-h1",
          "label": "H1"
        },
        {
          "value": "text-h2",
          "label": "H2"
        },
        {
          "value": "text-h3",
          "label": "H3"
        }
      ],
      "default": "text-h3"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>We are a family-owned and operated lavender farm located in Bodega Bay, situated along the Sonoma coast in Northern California.</p>"
    },
    {
      "type": "select",
      "id": "text_style",
      "label": "Text Style",
      "options": [
        {
          "value": "text-body",
          "label": "Body"
        },
        {
          "value": "text-h3",
          "label": "H3"
        },
        {
          "value": "text-tag",
          "label": "Tag"
        }
      ],
      "default": "text-h3"
    },
  ],
  "presets": [
    {
      "name": "About 2025"
    }
  ]
}
{% endschema %}
