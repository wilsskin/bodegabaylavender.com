{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    background-color: #E1E0F1;
  }

  .section-{{ section.id }}-padding {
    padding-top: 48px;
    padding-bottom: 48px;
  }

  /* Footer 2025 Design - Figma Match */
  .footer-2025 {
    background-color: #E1E0F1;
    padding: var(--spacing-large) 0;
  }

  .footer-2025__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-medium);
  }

  .footer-2025__content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 120px;
  }

  .footer-2025__left-section {
    display: flex;
    gap: 8px;
  }

  .footer-2025__logo {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 154px;
  }

  .footer-2025__logo-link {
    display: inline-block;
    text-decoration: none;
  }

  .footer-2025__logo img {
    width: 100px;
    height: 100px;
    object-fit: contain;
  }

  .footer-2025__copyright {
    font-family: 'Open Sans', sans-serif;
    font-weight: 300;
    font-size: 16px;
    line-height: 1.36;
    color: #4D4D62;
    margin: 0;
    white-space: nowrap;
  }

  .footer-2025__nav-columns {
    display: flex;
    gap: 120px;
  }

  .footer-2025__column {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .footer-2025__column--browse {
    min-width: 94px;
  }

  .footer-2025__column--policies {
    min-width: 144px;
  }

  .footer-2025__column-heading {
    font-family: 'Open Sans', sans-serif;
    font-weight: 600;
    font-size: 18px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
  }

  .footer-2025__column-links {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer-2025__link {
    font-family: 'Open Sans', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.36;
    color: #000000;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-2025__link:hover {
    color: #505ABC;
  }

  .footer-2025__contact {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .footer-2025__email {
    font-family: 'Open Sans', sans-serif;
    font-weight: 600;
    font-size: 18px;
    line-height: 1.36;
    color: #000000;
    margin: 0;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-2025__email:hover {
    color: #505ABC;
  }

  .footer-2025__social {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .footer-2025__social-icon {
    width: 28px;
    height: 28px;
    opacity: 1;
    transition: opacity 0.2s ease;
  }

  .footer-2025__social-icon:hover {
    opacity: 0.7;
  }

  .footer-2025__copyright-mobile {
    font-family: 'Open Sans', sans-serif;
    font-weight: 300;
    font-size: 16px;
    line-height: 1.36;
    color: #4D4D62;
    margin: 0;
    margin-top: 24px;
    white-space: nowrap;
    display: none;
  }

  /* Tablet Responsive */
  @media screen and (max-width: 1024px) {
    .footer-2025__content {
      gap: 40px;
    }

    .footer-2025__left-section {
      gap: 40px;
    }

    .footer-2025__nav-columns {
      gap: 40px;
    }
  }

  /* Mobile Responsive - Vertical Layout */
  @media screen and (max-width: 900px) {
    .footer-2025__container {
      padding: 0 48px;
    }

    .footer-2025__content {
      flex-direction: column;
      gap: 48px;
    }

    .footer-2025__left-section {
      flex-direction: column;
      gap: 48px;
    }

    .footer-2025__nav-columns {
      flex-direction: row;
      gap: 48px;
      justify-content: flex-start;
    }

    .footer-2025__column {
      min-width: auto;
      width: auto;
    }

    .footer-2025__contact {
      align-items: flex-start;
      text-align: left;
    }

    .footer-2025__social {
      justify-content: flex-start;
    }

    .footer-2025__logo {
      align-items: flex-start;
      gap: 24px;
    }

    .footer-2025__copyright {
      display: none;
    }

    .footer-2025__copyright-mobile {
      display: block;
    }
  }

  /* Small Mobile Layout - Below 575px */
  @media screen and (max-width: 300px) {
    .footer-2025__nav-columns {
      flex-direction: column;
      gap: 32px;
    }

    .footer-2025__column {
      width: 100%;
    }
  }

  /* Small Mobile Responsive */
  @media screen and (max-width: 750px) {
    .footer-2025__container {
      padding: 0 16px;
    }

    .footer-2025__content {
      gap: 32px;
    }

    .footer-2025__left-section {
      gap: 32px;
    }

    .footer-2025__nav-columns {
      gap: 32px;
    }

    .footer-2025__logo img {
      width: 80px;
      height: 80px;
    }

    .footer-2025__copyright {
      font-size: 14px;
    }

    .footer-2025__column-heading {
      font-size: 16px;
    }

    .footer-2025__link {
      font-size: 14px;
    }

    .footer-2025__email {
      font-size: 14px;
    }
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }
    .footer-2025__container {
      padding: 0 48px;
    }

    .section-{{ section.id }}-padding {
      padding-top: 48px;
      padding-bottom: 48px;
    }
  }
{%- endstyle -%}

<footer class="footer-2025 color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer-2025__container">
    <div class="footer-2025__content">
      <!-- Left Section: Logo + Navigation -->
      <div class="footer-2025__left-section">
        <!-- Logo -->
        <div class="footer-2025__logo">
          <a href="{{ routes.root_url }}" class="footer-2025__logo-link">
            <img 
              src="{{ 'logo.png' | asset_url }}"
              alt="{{ shop.name }}"
                            loading="lazy"
                          >
          </a>
          <p class="footer-2025__copyright">© 2025 Bodega Bay Lavender</p>
                        </div>

        <!-- Navigation Columns -->
        <div class="footer-2025__nav-columns">
          <!-- Browse Column -->
          <div class="footer-2025__column footer-2025__column--browse">
            <h3 class="footer-2025__column-heading">BROWSE</h3>
            <div class="footer-2025__column-links">
              <a href="{{ routes.root_url }}" class="footer-2025__link">Home</a>
              <a href="{{ routes.all_products_collection_url }}" class="footer-2025__link">Shop All</a>
              <a href="{{ pages.about.url | default: '#' }}" class="footer-2025__link">About Us</a>
              <a href="{{ pages.stay-with-us.url | default: '#' }}" class="footer-2025__link">Stay With Us</a>
              </div>
          </div>

          <!-- Policies Column -->
          <div class="footer-2025__column footer-2025__column--policies">
            <h3 class="footer-2025__column-heading">POLICIES</h3>
            <div class="footer-2025__column-links">
              <a href="{{ pages.shipping-returns.url | default: '#' }}" class="footer-2025__link">Shipping & Returns</a>
              <a href="{{ shop.privacy_policy.url | default: '#' }}" class="footer-2025__link">Privacy</a>
              <a href="{{ shop.terms_of_service.url | default: '#' }}" class="footer-2025__link">Terms of Service</a>
            </div>
            </div>
        </div>
      </div>

      <!-- Right Section: Contact -->
      <div class="footer-2025__contact">
        <a href="mailto:Jami@bodegabaylavender.com" class="footer-2025__email">Jami@bodegabaylavender.com</a>
        <div class="footer-2025__social">
          <a href="{{ settings.social_facebook_link | default: '#' }}" target="_blank" rel="noopener">
            <img src="{{ 'icon-facebook.svg' | asset_url }}" alt="Facebook" class="footer-2025__social-icon">
          </a>
          <a href="{{ settings.social_instagram_link | default: '#' }}" target="_blank" rel="noopener">
            <img src="{{ 'icon-instagram.svg' | asset_url }}" alt="Instagram" class="footer-2025__social-icon">
          </a>
        </div>
        <p class="footer-2025__copyright-mobile">© 2025 Bodega Bay Lavender</p>
      </div>
    </div>
  </div>
</footer>

