{%- style -%}
  .section-{{ section.id }} {
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
    padding: var(--spacing-xlarge) 0; /* 64px top and bottom */
  }

  .section-{{ section.id }}__container {
    max-width: 120rem; /* 1200px - using rem */
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}__container {
      padding: 0 5rem;
    }
  }

  .section-{{ section.id }}__content {
    display: flex;
    flex-direction: column;
    gap: 2.4rem; /* 32px - default gap */
  }

  .section-{{ section.id }}__content > .section-{{ section.id }}__header + .section-{{ section.id }}__features {
    margin-top: 3.2rem; /* Additional 32px to make total 64px between header and features */
  }

  .section-{{ section.id }}__header {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    text-align: left;
    max-width: 60rem; /* 600px - using rem */
    margin: 0;
  }

  .section-{{ section.id }}__heading {
    font-family: 'Open Sans', sans-serif;
    font-weight: 600;
    font-size: 3.2rem; /* 32px - matches design */
    line-height: 1.36;
    color: #000000;
    margin: 0;
  }

  .section-{{ section.id }}__features {
    display: flex;
    gap: 1rem; /* 10px - using rem */
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .section-{{ section.id }}__feature {
    flex: 1;
    max-width: 30rem; /* 320px total */
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xsmall); /* 8px - using variable */
    align-items: flex-start;
    text-align: left;
    background-color: #FFFFFF; /* White card background */
  }

  .section-{{ section.id }}__feature-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-bottom: 24px;
  }

  .section-{{ section.id }}__feature-header svg,
  .section-{{ section.id }}__feature-header img {
    width: 28px;
    height: 28px;
    color: #6149A2;
    fill: #6149A2;
  }

  .section-{{ section.id }}__feature-title {
    font-family: 'Open Sans', sans-serif;
    font-weight: 500;
    font-size: 1.8rem; /* 18px - matches design */
    line-height: 1.5;
    font-style: italic;
    color: #000000;
    margin: 0;
    flex: 1;
  }

  .section-{{ section.id }}__feature-text {
    font-family: 'Open Sans', sans-serif;
    font-weight: 400;
    font-size: 1.8rem; /* 16px - matches design */
    line-height: 1.3;
    color: #4D4D62;
    margin: 0;
  }

  @media screen and (max-width: 1024px) {
    .section-{{ section.id }}__features {
      gap: 1.5rem; /* Increase gap on smaller screens */
    }
    
    .section-{{ section.id }}__feature {
      width: 30.4rem; /* 304px total (272px content + 32px padding) */
      max-width: 30.4rem; /* 304px total */
    }
  }

  @media screen and (max-width: 900px) {
    .section-{{ section.id }}__features {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: flex-start;
      gap: 1rem;
    }
    
    .section-{{ section.id }}__feature {
      width: calc(50% - 0.5rem); /* 2 cards per row */
      max-width: none;
    }
    
    .section-{{ section.id }}__feature:nth-child(3) {
      width: 100%; /* 3rd card full width below */
    }
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}__container {
      padding: 0 1.5rem;
    }

    .section-{{ section.id }}__heading {
      font-size: 2.8rem; /* 28px on mobile */
    }

    .section-{{ section.id }}__feature-title {
      font-size: 1.6rem; /* 16px on mobile */
    }

    .section-{{ section.id }}__feature-text {
      font-size: 1.4rem; /* 14px on mobile */
    }

  .section-{{ section.id }}__feature-header svg,
  .section-{{ section.id }}__feature-header img {
    width: 24px;
    height: 24px;
  }

  }

  @media screen and (max-width: 650px) {
    .section-{{ section.id }}__feature-header {
      padding-bottom: 8px;
    }

     .section-{{ section.id }}__features {
      display: flex;
      flex-direction: column;
      gap: 1.5rem; /* Increased gap for better vertical spacing */
    }


    .section-{{ section.id }}__feature {
      width: 100%;
      max-width: 288px;
      gap: 4px;
      padding-bottom: 16px;
    }
    
  }


{%- endstyle -%}

<div class="section-{{ section.id }}">
  <div class="section-{{ section.id }}__container">
    <div class="section-{{ section.id }}__content">
      <div class="section-{{ section.id }}__header">
        <h2 class="section-{{ section.id }}__heading">
          {{ section.settings.heading | default: 'Why Lavender?' }}
        </h2>
      </div>

      <div class="section-{{ section.id }}__features">
        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-header">
            {{ 'icon-quote.svg' | asset_url | img_tag: 'quote icon', 'width="22" height="22"' }}
          </div>
          <h3 class="section-{{ section.id }}__feature-title">
            {{ section.settings.feature_1_title | default: 'Treat burn wounds' }}
          </h3>
          <p class="section-{{ section.id }}__feature-text">
            "I always keep <a href="#" style="color: #636DCF; text-decoration: underline;">lavender essential oil</a> in the kitchen in case I burn myself"
          </p>
        </div>

        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-header">
            {{ 'icon-quote.svg' | asset_url | img_tag: 'quote icon', 'width="22" height="22"' }}
          </div>
          <h3 class="section-{{ section.id }}__feature-title">
            {{ section.settings.feature_2_title | default: 'Repel insects' }}
          </h3>
          <p class="section-{{ section.id }}__feature-text">
            "We use <a href="#" style="color: #636DCF; text-decoration: underline;">lavender hydrosol</a> as a mosquito repellent everyday in Kauai"
          </p>
        </div>

        <div class="section-{{ section.id }}__feature">
          <div class="section-{{ section.id }}__feature-header">
            {{ 'icon-quote.svg' | asset_url | img_tag: 'quote icon', 'width="22" height="22"' }}
          </div>
          <h3 class="section-{{ section.id }}__feature-title">
            {{ section.settings.feature_3_title | default: 'Natural glass cleaner' }}
          </h3>
          <p class="section-{{ section.id }}__feature-text">
            "<a href="#" style="color: #636DCF; text-decoration: underline;">Lavender hydrosol</a> is the best non-chemical glass cleaner I've ever used"
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

